`define next_shift_amount 0 //IN CASE OF REQUIRED SIGNALS VALUES IN THE FUTURE, SHIFT YOUR ENTIRE TIMING BY THIS FACTOR

`include "ipc.sva"
`include "globalTypes.sva"
`include "TestMasterSlave06_types.sva"
`include "TestMasterSlave06_functions.sva"

import top_level_types::*;

module TestMasterSlave06_verification(reset);

input reset;

//DESIGNER SHOULD PAY ATTENTION FOR USING THE MODEL CORRECT NAME TO REFER TO THE CLK SIGNAL USED IN IT
default clocking default_clk @(posedge TestMasterSlave06.clk); endclocking
`include "TestMasterSlave06_macros.sva"

////////////////////////////////////
//////////// Operations ////////////
////////////////////////////////////

sequence reset_sequence;
reset ##1 !reset;  	//DESIGNER REFER TO MODEL RESET SIGNAL HERE
endsequence

property reset_p;
	reset_sequence |->
	t##0 state_1() and
	t##0 phase() == SECTION_A;
endproperty
reset_a: assert property (reset_p);



property state_1_1_p(o);
 bit[31:0] phase_f;
	t ##0 hold(phase_f, phase()) and
	t##0 state_1() and
	t##0 s_in_sync()
implies
	t_end(o)##0 state_2() and
	t_end(o)##0 phase() == phase_f;
endproperty;
state_1_1_a: assert property (disable iff (reset) state_1_1_p(1)); //ASSIGN t_end offset here



property state_1_2_p(o);
 bit[31:0] phase_f;
	t ##0 hold(phase_f, phase()) and
	t##0 state_1() and
	t##0 !(s_in_sync())
implies
	t_end(o)##0 state_2() and
	t_end(o)##0 phase() == phase_f;
endproperty;
state_1_2_a: assert property (disable iff (reset) state_1_2_p(1)); //ASSIGN t_end offset here



property state_2_3_p(o);
	t##0 state_2() and
	t##0 s_in_sync() and
	t##0 !((phase() == SECTION_B))
implies
	t_end(o)##0 state_3() and
	t_end(o)##0 phase() == SECTION_B;
endproperty;
state_2_3_a: assert property (disable iff (reset) state_2_3_p(1)); //ASSIGN t_end offset here



property state_2_4_p(o);
	t##0 state_2() and
	t##0 !(s_in_sync()) and
	t##0 !((phase() == SECTION_B))
implies
	t_end(o)##0 state_3() and
	t_end(o)##0 phase() == SECTION_B;
endproperty;
state_2_4_a: assert property (disable iff (reset) state_2_4_p(1)); //ASSIGN t_end offset here



property state_3_5_p(o);
	t##0 state_3() and
	t##0 s_in_sync()
implies
	t_end(o)##0 state_1() and
	t_end(o)##0 phase() == SECTION_A;
endproperty;
state_3_5_a: assert property (disable iff (reset) state_3_5_p(1)); //ASSIGN t_end offset here



property state_3_6_p(o);
	t##0 state_3() and
	t##0 !(s_in_sync())
implies
	t_end(o)##0 state_1() and
	t_end(o)##0 phase() == SECTION_A;
endproperty;
state_3_6_a: assert property (disable iff (reset) state_3_6_p(1)); //ASSIGN t_end offset here



endmodule

//DESIGNER SHOULD PAY ATTENTION FOR USING THE MODEL CORRECT NAME FOR BINDING AND TO REFER TO THE RESET SIGNAL USED IN IT
bind TestMasterSlave06 TestMasterSlave06_verification inst (.*, .reset());
