`define next_shift_amount 0 //IN CASE OF REQUIRED SIGNALS VALUES IN THE FUTURE, SHIFT YOUR ENTIRE TIMING BY THIS FACTOR

`include "ipc.sva"
`include "globalTypes.sva"
`include "TestBasic27_types.sva"
`include "TestBasic27_functions.sva"

import top_level_types::*;

module TestBasic27_verification(reset);

input reset;

//DESIGNER SHOULD PAY ATTENTION FOR USING THE MODEL CORRECT NAME TO REFER TO THE CLK SIGNAL USED IN IT
default clocking default_clk @(posedge TestBasic27.clk); endclocking
`include "TestBasic27_macros.sva"

////////////////////////////////////
//////////// Operations ////////////
////////////////////////////////////

sequence reset_sequence;
reset ##1 !reset;  	//DESIGNER REFER TO MODEL RESET SIGNAL HERE
endsequence

property reset_p;
	reset_sequence |->
	t##0 state_1() and
	t##0 data2() == m_in_2_sig_f and
	t##0 data3() == m_in_3_sig_f and
	t##0 m_out_1_notify() == 0 and
	t##0 m_out_2_notify() == 0 and
	t##0 m_out_3_notify() == 0;
endproperty
reset_a: assert property (reset_p);



property state_1_1_p(o);
 bit[31:0] data2_f;
 bit[31:0] data3_f;
 bit[31:0] m_in_1_sig_f;
	t ##0 hold(data2_f, data2()) and
	t ##0 hold(data3_f, data3()) and
	t ##0 hold(m_in_1_sig_f, m_in_1_sig()) and
	t##0 state_1()
implies
	t_end(o)##0 state_2() and
	t_end(o)##0 data2() == data2_f and
	t_end(o)##0 data3() == data3_f and
	t_end(o)##0 m_out_1_sig() == m_in_1_sig_f and
	t_end(o)##0 m_out_2_sig() == data2_f and
	t_end(o)##0 m_out_3_sig() == data3_f and
	during_o (t, 1, t_end(o), -1, m_out_1_notify() == 0) and
	t_end(o)##0 m_out_1_notify() == 1 and
	during_o (t, 1, t_end(o), -1, m_out_2_notify() == 0) and
	t_end(o)##0 m_out_2_notify() == 1 and
	during_o (t, 1, t_end(o), -1, m_out_3_notify() == 0) and
	t_end(o)##0 m_out_3_notify() == 1;
endproperty;
state_1_1_a: assert property (disable iff (reset) state_1_1_p(1)); //ASSIGN t_end offset here



property state_2_2_p(o);
 bit[31:0] m_in_2_sig_f;
 bit[31:0] m_in_3_sig_f;
	t ##0 hold(m_in_2_sig_f, m_in_2_sig()) and
	t ##0 hold(m_in_3_sig_f, m_in_3_sig()) and
	t##0 state_2()
implies
	t_end(o)##0 state_1() and
	t_end(o)##0 data2() == m_in_2_sig_f and
	t_end(o)##0 data3() == m_in_3_sig_f and
	during_o (t, 1, t_end(o), 0, m_out_1_notify() == 0) and
	during_o (t, 1, t_end(o), 0, m_out_2_notify() == 0) and
	during_o (t, 1, t_end(o), 0, m_out_3_notify() == 0);
endproperty;
state_2_2_a: assert property (disable iff (reset) state_2_2_p(1)); //ASSIGN t_end offset here



endmodule

//DESIGNER SHOULD PAY ATTENTION FOR USING THE MODEL CORRECT NAME FOR BINDING AND TO REFER TO THE RESET SIGNAL USED IN IT
bind TestBasic27 TestBasic27_verification inst (.*, .reset());
