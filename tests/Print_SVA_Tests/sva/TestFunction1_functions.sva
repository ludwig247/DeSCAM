function bit[31:0] foo (bit[31:0] x);
	if (((x + 1) > 5)) begin return ((x + 1)<<1); end
	else if (!(((x + 1) > 5)) && ((x + 1) > 20)) begin return ((x + 1) + 2); end
	else if (!(((x + 1) > 5)) && !(((x + 1) > 20)) && ((x + 1) == 20)) begin return (x + 1); end
	else if (!(((x + 1) > 5)) && !(((x + 1) > 20)) && !(((x + 1) == 20))) begin return 0; end
endfunction

